{
  "compilerOptions": {
    "sourceMap": false,
    "noImplicitAny": true,
    "target": "es5",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": "./src",
    "baseUrl": "src",
    "outDir": "./dist",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
